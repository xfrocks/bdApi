    <template title="bdapi_account_authorize" version_id="3" version_string="0.2.1"><![CDATA[<xen:title>{xen:phrase bdapi_authorize_access}</xen:title>

<form method="post" class="xenForm" action="{xen:link 'account/authorize'}">
	
	<p>{xen:phrase bdapi_please_confirm_to_authorize_access}</p>
	
	<dl class="ctrlUnit">
		<dt>{xen:phrase bdapi_client}:</dt>
		<dd>
			{$client.name}
			<p class="explain">{$client.description}</p>
		</dd>
	</dl>
	
	<dl class="ctrlUnit">
		<dt>{xen:phrase bdapi_requested_scopes}:</dt>
		<dd>
			<ul>
				<xen:foreach loop="$authorizeScopes" value="$scope">
					<xen:if is="{$scope} == 'read'">
						<li><label>
							<input type="checkbox" name="scopes[]" value="read" checked="checked" />
							{xen:phrase bdapi_scope_read}
						</label></li>
					<xen:elseif is="{$scope} == 'post'" />
						<li><label>
							<input type="checkbox" name="scopes[]" value="post" checked="checked" />
							{xen:phrase bdapi_scope_post}
						</label></li>
					<xen:elseif is="{$scope} == 'manage_account_settings'" />
						<li><label>
							<input type="checkbox" name="scopes[]" value="manage_account_settings" checked="checked" />
							{xen:phrase bdapi_scope_manage_account_settings}
						</label></li>
					<xen:elseif is="{$scope} == 'participate_in_conversations'" />
						<li><label>
							<input type="checkbox" name="scopes[]" value="participate_in_conversations" checked="checked" />
							{xen:phrase bdapi_scope_participate_in_conversations}
						</label></li>
					</xen:if>
				</xen:foreach>
				
				<xen:hook name="bdapi_requested_scopes" params="{xen:array 'scopes={$authorizeScopes}'}" />
				<input type="hidden" name="scopes_included" value="1" />
			</ul>
		</dd>
	</dl>
	
	<p>{xen:phrase bdappi_you_will_be_redirected_x, 'redirectUri={$authorizeRedirectUri}', 'clientName={$client.name}'}</p>

	<dl class="ctrlUnit submitUnit">
		<dt></dt>
		<dd>
			<input type="submit" name="accept" value="{xen:phrase bdapi_authorize_access}" class="button primary" />
			<input type="submit" name="cancel" value="{xen:phrase cancel}" class="button" />
		</dd>
	</dl>

	<input type="hidden" name="_xfToken" value="{$visitor.csrf_token_page}" />
	<xen:foreach loop="$authorizeParams" key="$key" value="$value">
		<input type="hidden" name="{$key}" value="{$value}" />
	</xen:foreach>
</form>]]></template>
